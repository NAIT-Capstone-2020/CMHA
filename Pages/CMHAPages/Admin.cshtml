@page
@model CHMA.Pages.CHMAPages.AdminModel
<br />
<h2 class="text-info">Admin Login</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label> Username</label>
            </div>
            <div class="col-6">
                <input class="from-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Password</label>
            </div>
            <div class="col-6">
                <input class="from-control" />
            </div>
            <div class="form-group row">
                <div class="col-4 offset-3">
                    <input type="submit" value="Login" class="btn btn-primary from-control" />
                </div>
                <div class="col-1 offset-0">
                    <a asp-page="Index" class="btn btn-success from-control">Forgot Pasword</a>
                </div>
            </div>
        </div>
    </form>
</div>
