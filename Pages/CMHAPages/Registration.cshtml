@page
@model CHMA.Pages.CMHAPages.RegistrationModel
    <br />
    <h2 class="text-info">Registration</h2>
    <br />

    <div class="border container" style="padding:70px;">
        <form method="post">
            <div class="form-group row">
                <div class="col-3">
                    <label> Username</label>
                </div>
                <div class="col-6">
                    <input class="from-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label> First Name</label>
                </div>
                <div class="col-6">
                    <input class="from-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label>Last Name</label>
                </div>
                <div class="col-6">
                    <input class="from-control" />
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label> Email Address</label>
                    </div>
                    <div class="col-6">
                        <input class="from-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label> Password</label>
                    </div>
                    <div class="col-6">
                        <input class="from-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label> Confirm Password</label>
                    </div>
                    <div class="col-6">
                        <input class="from-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1 offset-0">
                        <input type="submit" value="Register" class="btn btn-primary from-control" />
                    </div>
                </div>
            </div>
        </form>
    </div>
